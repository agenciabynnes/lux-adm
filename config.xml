<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android" android-versionCode="20" ios-CFBundleVersion="0.2.0" version="0.2.0" id="com.lux.android" >
<!-- This file was generated by the Intel XDK Cordova Package Build tool. -->
<name>Lux Administradora</name>
<description>Moradores e condomínio conectados</description>
<author>Agência Bynnes</author>
<content src="index.html"/>
<preference name="android-build-tool" value="gradle" />

<access origin="*"/>
<allow-navigation href="*"/>
<allow-intent href="*"/>

<preference name="phonegap-version" value="cli-6.2.0" />
<plugin name="cordova-plugin-crosswalk-webview" spec="^1.8.0">
    <variable name="XWALK_VERSION" value="18+"/>
    <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+"/>
    <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect"/>
    <variable name="XWALK_MODE" value="embedded"/>
    <variable name="XWALK_MULTIPLEAPK" value="false"/>
</plugin>

<plugin name="cordova-plugin-geolocation" spec="^2.2.0">
    <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Usamos a sua localização, quando autorizado, para enviar alertas de chegada para portaria" />
</plugin>
<edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
    <string>Usamos a sua localização, quando autorizado, para enviar alertas de chegada para portaria</string>
</edit-config>

<plugin name="cordova-plugin-device" spec="^1.1.2"/>
<plugin name="cordova-plugin-network-information" spec="^1.2.1"/>
<plugin name="cordova-plugin-inappbrowser" spec="^1.4.0"/>
<plugin name="cordova-plugin-whitelist" spec="^1.2.2"/>

<plugin name="cordova-plugin-file" spec="4.2.0"/>
<plugin name="cordova-plugin-statusbar" spec="2.1.3"/>
<plugin name="ionic-plugin-keyboard" spec="2.2.1"/>
<plugin name="cordova-plugin-dialogs" spec="1.2.1"/>


<plugin name="cordova-plugin-splashscreen" spec="3.2.2"/>

<!-- iOS 1.8.4 e Android 1.6.4 | alterar notificationTemplate (notificacao com app aberto) framework7.js -->
<plugin name="phonegap-plugin-push" spec="1.6.4">
    <variable name="SENDER_ID" value="975722403631"/>
</plugin>

<plugin name="cordova-plugin-app-version" spec="0.1.9"/>
<plugin name="cordova-plugin-google-analytics" spec="1.8.3"/>
<plugin name="cordova-plugin-file-transfer" spec="1.5.1"/>
<plugin name="cordova-plugin-media" spec="2.3.0"/>
<plugin name="cordova-plugin-android-permissions"/>

<!-- iOS 3.0.0 e Android 2.3.0 -->
<plugin name="cordova-plugin-camera" spec="2.4.1">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="Usamos a câmera para tirar fotos nas aberturas de ocorrências" />
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Usamos a galeria para envio de fotos nas aberturas de ocorrências" />
</plugin>
<edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
    <string>Usamos a câmera para tirar fotos nas aberturas de ocorrências</string>
</edit-config>
<config-file platform="ios" parent="NSPhotoLibraryUsageDescription" mode="merge">  
      <string>Usamos a galeria para envio de fotos nas aberturas de ocorrências</string> 
</config-file>
<edit-config target="NSPhotoLibraryAddUsageDescription" file="*-Info.plist" mode="merge">
    <string>Precisamos de acesso a galeria para salvar as fotos de aberturas de ocorrências</string>
</edit-config>

<preference  name="AutoHideSplashScreen" value="true"/>
<preference  name="SplashScreenDelay" value="3000"/>
<preference  name="FadeSplashScreen" value="true"/>
<preference  name="FadeSplashScreenDuration" value="0"/>
<preference  name="ShowSplashScreenSpinner" value="false"/>
<preference  name="SplashMaintainAspectRatio" value="true"/>
<preference  name="DisallowOverscroll" value="true"/>
<preference  name="UIWebViewBounce" value="false"/>
<preference  name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root"/>
<preference name="AndroidPersistentFileLocation" value="Compatibility" />

<preference name="xwalkVersion" value="18+"/>
<preference  name="xwalkCommandLine" value="--disable-pull-to-refresh-effect --ignore-gpu-blacklist"/>
<preference name="xwalkMode" value="embedded"/>
<preference name="xwalkMultipleApk" value="false"/>

<platform name="android">
    <resource-file src="google-services.json" target="google-services.json" />
    <preference name="android-minSdkVersion" value="17"/>
    <preference name="android-targetSdkVersion" value="26"/>
    <preference name="android-installLocation" value="auto"/>
    <preference name="Fullscreen" value="false"/>
    <preference name="Orientation" value="default"/>
    <preference name="AndroidLaunchMode" value="singleTop"/>
    <preference name="android-signed" value="true"/>
</platform>

<platform name="ios">
    <resource-file src="GoogleService-Info.plist" target="GoogleService-Info.plist" />
    <preference name="ios-configuration" value="production"/>
    <preference name="deployment-target" value="8.0"/>
    <preference name="Orientation" value="all"/>
</platform>

